<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button8"
        android:layout_gravity="right|top"
        android:onClick="onClick"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_marginTop="10dp"
        android:src="@drawable/lennardjones_thumb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lennard-Jones"
        android:id="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imageButton" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/osmosis_thumb"
        android:layout_alignBottom="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Osmosis"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_marginTop="150dp"
        android:src="@drawable/pistoncylinder_thumb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piston-Cylinder"
        android:id="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_marginTop="300dp"
        android:src="@drawable/polymerization_thumb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Polymerization"
        android:id="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/reactionequilibrium_thumb"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReactionEquilibrium"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>